{
  "name": "vriksha-chain-blockchain",
  "version": "1.0.0",
  "description": "Blockchain integration for VrikshaChain",
  "scripts": {
    "blockchain:start": "ganache --host 0.0.0.0 --port 8545",
    "blockchain:compile": "truffle compile",
    "blockchain:deploy": "truffle migrate",
    "blockchain:reset": "truffle migrate --reset",
    "blockchain:console": "truffle console",
    "setup": "npm run blockchain:compile && npm run blockchain:deploy",
    "test:contract": "truffle test"
  },
  "devDependencies": {
    "truffle": "^5.11.5",
    "ganache": "^7.9.1"
  }
}
